{
  "expo": {
    "name": "Giorgio's Pizzeria",
    "slug": "giorgios",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#8B4513"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.giorgios.pizzeria"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#8B4513"
      },
      "package": "com.giorgios.pizzeria",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static",
      "name": "Giorgio's Pizzeria",
      "shortName": "Giorgio's",
      "description": "Pizzas artesanales hechas con amor - Carta digital de Giorgio's",
      "lang": "es",
      "themeColor": "#8B4513",
      "backgroundColor": "#ffffff",
      "display": "standalone",
      "orientation": "portrait-primary",
      "startUrl": "/",
      "scope": "/",
      "preferRelatedApplications": false,
      "icons": [
        {
          "src": "./assets/icon.png",
          "sizes": "any",
          "type": "image/png",
          "purpose": "any maskable"
        }
      ]
    },
    "plugins": [
      "expo-router",
      "expo-font"
    ]
  }
}
